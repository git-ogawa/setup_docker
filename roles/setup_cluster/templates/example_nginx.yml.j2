---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: example-nginx-deployment
spec:
  selector:
    matchLabels:
      app: example-nginx
  replicas: 1
  template:
    metadata:
      labels:
        app: example-nginx
    spec:
      containers:
        - name: nginx
          image: nginx:1.14.2
          ports:
            - containerPort: 80

---
apiVersion: v1
kind: Service
metadata:
  name: example-nginx-service
spec:
  ports:
    - port: 80
      targetPort: 80
      protocol: TCP
  selector:
    app: example-nginx

---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: example-nginx-ingress
  annotations:
    kubernetes.io/ingress.class: nginx
spec:
  rules:
    - host: {{ aws_alb_dns }}
      http:
        paths:
        - path: /
          pathType: Prefix
          backend:
            service:
              name: example-nginx-service
              port:
                number: 80
